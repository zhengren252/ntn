# TACoreService Environment Configuration
# Copy this file to .env and modify the values as needed

# Service Configuration
SERVICE_NAME=TACoreService
DEBUG=false

# ZeroMQ Configuration
ZMQ_FRONTEND_PORT=5555
ZMQ_BACKEND_PORT=5556
ZMQ_BIND_ADDRESS=127.0.0.1

# HTTP API Configuration
HTTP_HOST=127.0.0.1
HTTP_PORT=8080

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Database Configuration
DATABASE_PATH=./data/tacoreservice.db

# Worker Configuration
WORKER_COUNT=4
WORKER_TIMEOUT=30

# TradingAgents-CN Configuration
TRADINGAGENTS_CN_PATH=./TradingAgents-CN

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_INTERVAL=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Security Configuration (for production)
# JWT_SECRET_KEY=your-secret-key-here
# API_KEY=your-api-key-here
# ALLOWED_HOSTS=localhost,127.0.0.1

# External Services (optional)
# MARKET_DATA_API_KEY=your-market-data-api-key
# BROKER_API_KEY=your-broker-api-key
# NOTIFICATION_WEBHOOK_URL=your-webhook-url