# ReviewGuard人工审核模组 - Staging环境配置

# 应用环境 (development/staging/production)
APP_ENV=staging
NODE_ENV=staging

# 服务端口配置
CLIENT_PORT=3000
SERVER_PORT=8000
API_PORT=8000

# 数据库配置
DATABASE_PATH=./data/reviewguard_staging.db
DATABASE_URL=sqlite:///data/reviewguard_staging.db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_URL=redis://localhost:6379/1

# ZeroMQ配置
ZEROMQ_SUB_ENDPOINT=tcp://localhost:5555
ZEROMQ_PUB_ENDPOINT=tcp://*:5556
ZEROMQ_SUB_PORT=5555
ZEROMQ_PUB_PORT=5556
ZEROMQ_SUB_TOPIC=optimizer.pool.trading
ZEROMQ_PUB_TOPIC=review.pool.approved

# ZeroMQ别名配置（兼容性）
ZMQ_SUB_ENDPOINT=tcp://localhost:5555
ZMQ_PUB_ENDPOINT=tcp://*:5556

# JWT配置
JWT_SECRET_KEY=staging-jwt-secret-key-change-in-production
JWT_SECRET=staging-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=12h
JWT_EXPIRE_MINUTES=720
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=720

# 审核规则配置
AUTO_APPROVE_LOW_RISK=true
MAX_POSITION_SIZE=0.3
RISK_THRESHOLD_HIGH=0.7
RISK_THRESHOLD_MEDIUM=0.4
AUTO_REVIEW_ENABLED=true
MANUAL_REVIEW_TIMEOUT_HOURS=12
MAX_PENDING_REVIEWS=500

# 审核配置
REVIEW_TIMEOUT_MINUTES=30
AUTO_APPROVE_THRESHOLD=0.9
AUTO_REJECT_THRESHOLD=0.2

# 日志配置
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=./logs/reviewguard_staging.log

# API配置
API_V1_STR=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","https://staging.neurotrade.com"]

# 监控配置
HEALTH_CHECK_INTERVAL=15
MONITOR_INTERVAL=15

# TACoreService配置
TACORE_SERVICE_URL=http://localhost:5555
TACORE_SERVICE_TIMEOUT=15000

# 安全配置（Staging环境相对宽松）
DEBUG=true
SERVER_HOST=0.0.0.0

# 环境标识
ENVIRONMENT=staging
DEPLOYMENT_ENV=staging