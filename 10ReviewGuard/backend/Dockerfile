FROM python:3.11-slim

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /app

# åˆ›å»ºérootç”¨æˆ·
RUN groupadd --gid 1001 appgroup && \
    useradd --uid 1001 --gid appgroup --shell /bin/bash --create-home appuser

# å®‰è£…ç³»ç»Ÿä¾èµ– (æ·»åŠ é‡è¯•æœºåˆ¶å’Œé•œåƒæºä¼˜åŒ–)
RUN sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list.d/debian.sources 2>/dev/null || sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list && apt-get update --fix-missing && \
    apt-get install -y --no-install-recommends \
    build-essential \
    libzmq3-dev \
    pkg-config \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# å¤åˆ¶ä¾èµ–æ–‡ä»¶å¹¶å®‰è£…Pythonä¾èµ–
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# å¤åˆ¶æºä»£ç ?
COPY . .

# åˆ›å»ºå¿…è¦ç›®å½•å¹¶è®¾ç½®æƒé™?
RUN mkdir -p /app/data /app/logs && \
    chown -R appuser:appgroup /app

# åˆ‡æ¢åˆ°érootç”¨æˆ·
USER appuser

# æš´éœ²ç«¯å£
EXPOSE 8000 5555 5556

# è®¾ç½®ç¯å¢ƒå˜é‡
ENV PYTHONPATH=/app/src
ENV APP_ENV=production
ENV PYTHONUNBUFFERED=1

# å¥åº·æ£€æŸ?
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# å¯åŠ¨å‘½ä»¤
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]
