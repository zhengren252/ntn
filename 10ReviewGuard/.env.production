# ReviewGuard生产环境配置

# 应用环境
APP_ENV=production
NODE_ENV=production

# 服务端口
API_PORT=8000
SERVER_PORT=8000
ZEROMQ_SUB_PORT=5555
ZEROMQ_PUB_PORT=5556

# 数据库配置
DATABASE_PATH=/app/data/reviewguard.db
DATABASE_URL=sqlite:///app/data/reviewguard.db

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ZeroMQ配置
ZEROMQ_SUB_ENDPOINT=tcp://localhost:5555
ZEROMQ_PUB_ENDPOINT=tcp://*:5556
ZEROMQ_SUB_TOPIC=optimizer.pool.trading
ZEROMQ_PUB_TOPIC=review.pool.approved

# ZeroMQ别名配置（兼容性）
ZMQ_SUB_ENDPOINT=tcp://localhost:5555
ZMQ_PUB_ENDPOINT=tcp://*:5556

# 安全配置
JWT_SECRET_KEY=REPLACE_WITH_SECURE_KEY_IN_PRODUCTION
JWT_SECRET=REPLACE_WITH_SECURE_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXPIRES_IN=30m
JWT_EXPIRE_MINUTES=30

# API配置
API_V1_STR=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/reviewguard.log

# 审核配置
MAX_PENDING_REVIEWS=1000
REVIEW_TIMEOUT_MINUTES=60
AUTO_APPROVE_THRESHOLD=0.95
AUTO_REJECT_THRESHOLD=0.1

# 监控配置
HEALTH_CHECK_INTERVAL=30
MONITOR_INTERVAL=30

# 服务器配置
SERVER_HOST=0.0.0.0
DEBUG=false

# TACoreService配置
TACORE_SERVICE_URL=http://tacore:5555
TACORE_SERVICE_TIMEOUT=30000

# 环境标识
ENVIRONMENT=production
DEPLOYMENT_ENV=production