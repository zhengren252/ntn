# ReviewGuard人工审核模组环境配置

# 应用环境 (development/staging/production)
APP_ENV=development
NODE_ENV=development

# 服务端口配置
CLIENT_PORT=3000
SERVER_PORT=8000
API_PORT=8000

# 数据库配置
DATABASE_PATH=./data/reviewguard.db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ZeroMQ配置
ZEROMQ_SUB_ENDPOINT=tcp://localhost:5555
ZEROMQ_PUB_ENDPOINT=tcp://*:5556
ZEROMQ_SUB_PORT=5555
ZEROMQ_PUB_PORT=5556
ZEROMQ_SUB_TOPIC=optimizer.pool.trading
ZEROMQ_PUB_TOPIC=review.pool.approved

# ZeroMQ别名配置（兼容性）
ZMQ_SUB_ENDPOINT=tcp://localhost:5555
ZMQ_PUB_ENDPOINT=tcp://*:5556

# JWT配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
JWT_EXPIRE_MINUTES=1440

# 审核规则配置
AUTO_APPROVE_LOW_RISK=true
MAX_POSITION_SIZE=0.5
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/reviewguard.log

# TACoreService配置
TACORE_SERVICE_URL=http://localhost:5555
TACORE_SERVICE_TIMEOUT=30000