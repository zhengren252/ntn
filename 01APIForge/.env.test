# API Factory Module - 测试环境配置
# 完整配置，匹配Settings类的所有字段

# 基础配置
ENVIRONMENT=test
DEBUG=true
HOST=localhost
PORT=8000
APP_NAME=API Factory Module

# ZeroMQ配置
ZMQ_PUBLISHER_PORT=5555
ZMQ_SUBSCRIBER_PORT=5556
ZMQ_REQUEST_PORT=5557
ZMQ_REPLY_PORT=5558
ZMQ_BIND_ADDRESS=tcp://*
ZMQ_CONNECT_ADDRESS=tcp://localhost

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# SQLite配置
SQLITE_DB_PATH=./data/api_factory_test.db
SQLITE_BACKUP_PATH=./data/backups

# 认证配置
AUTH_SECRET_KEY=test-secret-key-for-testing-only
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE=30
AUTH_REFRESH_TOKEN_EXPIRE=7

# API配置
API_RATE_LIMIT_PER_MINUTE=60
API_CIRCUIT_BREAKER_THRESHOLD=5
API_CIRCUIT_BREAKER_TIMEOUT=60

# 数据隔离
DATA_ISOLATION_ENABLED=true
TENANT_ID_HEADER=X-Tenant-ID

# Docker配置
DOCKER_ENABLED=false
DOCKER_NETWORK=api_factory_network