# API Factory Module - 开发环境配置
# 此文件用于本地开发，包含调试模式和开发友好的配置

# =================================================================
# 应用基础配置
# =================================================================
APP_ENV=development
ENV=dev
DEBUG=true
LOG_LEVEL=DEBUG
API_TITLE=API Factory Module (Development)
API_VERSION=1.0.0-dev
API_DESCRIPTION=API统一管理工厂 - 开发环境

# =================================================================
# 服务端口配置
# =================================================================
API_PORT=8002
ZMQ_PUB_PORT=5561
ZMQ_SUB_PORT=5562
ZMQ_REQ_PORT=5563
ZMQ_REP_PORT=5564

# =================================================================
# Redis配置 (开发环境)
# =================================================================
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6381/0

# =================================================================
# 数据库配置
# =================================================================
SQLITE_DB_PATH=./data/api_factory_dev.db
DATABASE_PATH=./data/api_factory_dev.db

# =================================================================
# JWT认证配置 (开发环境 - 使用简单密钥)
# =================================================================
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7

# =================================================================
# API配额与限流配置 (开发环境 - 宽松限制)
# =================================================================
DEFAULT_RATE_LIMIT=1000
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT=30
MAX_REQUESTS_PER_MINUTE=100
MAX_REQUESTS_PER_HOUR=6000

# =================================================================
# 外部API配置 (开发环境 - 测试密钥)
# =================================================================
# DeepSeek API
DEEPSEEK_API_KEY=sk-test-key-for-development
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OKX API (开发环境)
OKX_API_KEY=test-api-key
OKX_SECRET_KEY=test-secret-key
OKX_PASSPHRASE=test-passphrase
OKX_SANDBOX=true
OKX_BASE_URL=https://www.okx.com

# =================================================================
# 监控与日志配置
# =================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin
LOG_FILE_PATH=./logs/api_factory_dev.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =================================================================
# Docker容器资源配置
# =================================================================
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=1.0
NGINX_PORT=80
NGINX_SSL_PORT=443

# =================================================================
# 开发工具配置
# =================================================================
HOT_RELOAD=true
AUTO_RESTART=true
DEV_MODE=true
TEST_MODE=false

# =================================================================
# 安全配置 (开发环境)
# =================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","0.0.0.0"]
SECURE_COOKIES=false
HTTPS_ONLY=false