# 交易执行铁三角系统环境变量模板
# 复制此文件为 .env 并填入实际值

# 应用环境 (development/staging/production)
APP_ENV=development

# 数据库配置
DATABASE_URL=sqlite:./tradeguard.db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PASSWORD_STAGING=staging_redis_password

# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-here
JWT_SECRET_STAGING=staging-jwt-secret-key

# 交易所API密钥 (生产环境)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase

# 测试网API密钥 (staging环境)
BINANCE_TESTNET_API_KEY=your_binance_testnet_api_key
BINANCE_TESTNET_SECRET_KEY=your_binance_testnet_secret_key
OKX_TESTNET_API_KEY=your_okx_testnet_api_key
OKX_TESTNET_SECRET_KEY=your_okx_testnet_secret_key
OKX_TESTNET_PASSPHRASE=your_okx_testnet_passphrase

# 监控和警报
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
MONITORING_API_KEY=your_monitoring_api_key

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# ZeroMQ配置
ZMQ_BASE_PORT=5555

# 安全配置
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key

# 外部服务
TRADING_AGENTS_CN_API_URL=http://localhost:8080
TRADING_AGENTS_CN_API_KEY=your_trading_agents_api_key

# 备份配置
BACKUP_STORAGE_PATH=./backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# 开发工具
DEBUG_MODE=false
VERBOSE_LOGGING=false