# ===================================================================
# NeuroTrade Nexus (NTN) - ASTS Console Frontend Environment Variables
# Version: V2.1
# ===================================================================

# --- 基础配置 ---
NEXT_PUBLIC_APP_NAME="ASTS Console"
NEXT_PUBLIC_APP_VERSION="1.2.0"
NEXT_PUBLIC_ENVIRONMENT="development"

# --- API服务端点配置 ---
# 主要API基础URL
NEXT_PUBLIC_API_BASE_URL="http://localhost:8000"
NEXT_PUBLIC_WS_BASE_URL="ws://localhost:8001"

# 各微服务端点
NEXT_PUBLIC_CORE_SERVICE_URL="http://localhost:8000/api/core"
NEXT_PUBLIC_MARKET_SERVICE_URL="http://localhost:8001/api/market"
NEXT_PUBLIC_STRATEGY_SERVICE_URL="http://localhost:8002/api/strategy"
NEXT_PUBLIC_RISK_SERVICE_URL="http://localhost:8003/api/risk"
NEXT_PUBLIC_AI_SERVICE_URL="http://localhost:8004/api/ai"
NEXT_PUBLIC_REVIEW_SERVICE_URL="http://localhost:8005/api/review"

# APIForge服务配置（API密钥管理）
NEXT_PUBLIC_APIFORGE_SERVICE_URL="http://localhost:8000"

# --- WebSocket配置 ---
NEXT_PUBLIC_WS_MARKET_DATA="ws://localhost:8001/ws/market"
NEXT_PUBLIC_WS_SYSTEM_STATUS="ws://localhost:8000/ws/system"
NEXT_PUBLIC_WS_TRADING_EVENTS="ws://localhost:8002/ws/trading"
NEXT_PUBLIC_WS_RISK_ALERTS="ws://localhost:8003/ws/risk"

# --- 认证配置 ---
NEXT_PUBLIC_AUTH_ENABLED="true"
NEXT_PUBLIC_SESSION_TIMEOUT="3600000"
NEXT_PUBLIC_JWT_SECRET="your-jwt-secret-key-here"

# --- 开发配置 ---
NEXT_PUBLIC_DEBUG_MODE="true"
NEXT_PUBLIC_MOCK_DATA="false"
NEXT_PUBLIC_LOG_LEVEL="debug"

# --- 第三方服务配置 ---
# 如果需要直接从前端调用第三方API（不推荐，应通过后端代理）
# NEXT_PUBLIC_OPENAI_API_KEY="sk-..."
# NEXT_PUBLIC_BINANCE_API_KEY="..."

# --- 性能配置 ---
NEXT_PUBLIC_REQUEST_TIMEOUT="30000"
NEXT_PUBLIC_RETRY_ATTEMPTS="3"
NEXT_PUBLIC_RETRY_DELAY="1000"

# --- WebSocket配置 ---
NEXT_PUBLIC_WS_RECONNECT_INTERVAL="5000"
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS="10"
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL="30000"

# --- 主题和UI配置 ---
NEXT_PUBLIC_DEFAULT_THEME="dark"
NEXT_PUBLIC_ENABLE_ANIMATIONS="true"
NEXT_PUBLIC_CHART_THEME="dark"

# --- 安全配置 ---
NEXT_PUBLIC_ENABLE_CSP="true"
NEXT_PUBLIC_SECURE_COOKIES="true"

# --- 监控和分析 ---
# NEXT_PUBLIC_ANALYTICS_ID="..."
# NEXT_PUBLIC_SENTRY_DSN="..."

# --- 本地开发配置 ---
NEXT_PUBLIC_HOT_RELOAD="true"
NEXT_PUBLIC_SOURCE_MAPS="true"