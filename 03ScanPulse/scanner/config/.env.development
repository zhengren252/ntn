# 扫描器配置 - 开发环境
SCANNER_SCAN_INTERVAL=30
SCANNER_BATCH_SIZE=50
SCANNER_MAX_WORKERS=2
SCANNER_TIMEOUT=60

# 规则配置 - 开发环境（更敏感的阈值）
SCANNER_RULES_THREE_HIGH_ENABLED=true
SCANNER_RULES_THREE_HIGH_VOLATILITY_THRESHOLD=0.03
SCANNER_RULES_THREE_HIGH_VOLUME_THRESHOLD=500000
SCANNER_RULES_THREE_HIGH_CORRELATION_THRESHOLD=0.6

SCANNER_RULES_BLACK_HORSE_ENABLED=true
SCANNER_RULES_BLACK_HORSE_PRICE_CHANGE_THRESHOLD=0.10
SCANNER_RULES_BLACK_HORSE_VOLUME_SPIKE_THRESHOLD=2.0
SCANNER_RULES_BLACK_HORSE_NEWS_SENTIMENT_THRESHOLD=0.5

SCANNER_RULES_POTENTIAL_FINDER_ENABLED=true
SCANNER_RULES_POTENTIAL_FINDER_MARKET_CAP_THRESHOLD=50000000
SCANNER_RULES_POTENTIAL_FINDER_PRICE_THRESHOLD=0.5
SCANNER_RULES_POTENTIAL_FINDER_VOLUME_THRESHOLD=25000

# 日志配置 - 开发环境
LOGGING_LEVEL=DEBUG
LOGGING_FILE_ENABLED=true
LOGGING_FILE_PATH=logs/scanner_dev.log
LOGGING_CONSOLE_ENABLED=true
LOGGING_CONSOLE_COLORIZE=true

# 开发环境特定配置
DEVELOPMENT_MODE=true
MOCK_DATA_ENABLED=false
PERFORMANCE_PROFILING=true