# 测试环境变量配置
# 测试环境特定的环境变量设置

# 环境设置
SCANNER_ENV=staging
SCANNER_DEBUG=false

# Redis配置 - 测试环境
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=2
REDIS_PASSWORD=

# ZeroMQ配置 - 测试环境
ZMQ_PUBLISHER_HOST=localhost
ZMQ_PUBLISHER_PORT=25555
ZMQ_SUBSCRIBER_HOST=localhost
ZMQ_SUBSCRIBER_PORT=25556
ZMQ_REQUEST_HOST=localhost
ZMQ_REQUEST_PORT=25557
ZMQ_REPLY_HOST=localhost
ZMQ_REPLY_PORT=25558

# API配置 - 测试环境（使用测试网）
API_BINANCE_BASE_URL=https://testnet.binance.vision
API_BINANCE_API_KEY=
API_BINANCE_SECRET_KEY=
API_NEWS_API_KEY=

# 扫描器配置 - 测试环境
SCANNER_SCAN_INTERVAL=90
SCANNER_BATCH_SIZE=150
SCANNER_MAX_WORKERS=6
SCANNER_TIMEOUT=25

# 规则配置 - 测试环境（中等阈值）
SCANNER_RULES_THREE_HIGH_ENABLED=true
SCANNER_RULES_THREE_HIGH_VOLATILITY_THRESHOLD=0.04
SCANNER_RULES_THREE_HIGH_VOLUME_THRESHOLD=1500000
SCANNER_RULES_THREE_HIGH_CORRELATION_THRESHOLD=0.7

SCANNER_RULES_BLACK_HORSE_ENABLED=true
SCANNER_RULES_BLACK_HORSE_PRICE_CHANGE_THRESHOLD=0.15
SCANNER_RULES_BLACK_HORSE_VOLUME_SPIKE_THRESHOLD=3.0
SCANNER_RULES_BLACK_HORSE_NEWS_SENTIMENT_THRESHOLD=0.6

SCANNER_RULES_POTENTIAL_FINDER_ENABLED=true
SCANNER_RULES_POTENTIAL_FINDER_MARKET_CAP_THRESHOLD=150000000
SCANNER_RULES_POTENTIAL_FINDER_PRICE_THRESHOLD=1.5
SCANNER_RULES_POTENTIAL_FINDER_VOLUME_THRESHOLD=75000

# 日志配置 - 测试环境
LOGGING_LEVEL=INFO
LOGGING_FILE_ENABLED=true
LOGGING_FILE_PATH=logs/scanner_staging.log
LOGGING_CONSOLE_ENABLED=true
LOGGING_CONSOLE_COLORIZE=false

# 测试环境特定配置
TESTING_MODE=true
MOCK_DATA_ENABLED=false
PERFORMANCE_MONITORING=true
DATA_VALIDATION=true
LOAD_TESTING=false