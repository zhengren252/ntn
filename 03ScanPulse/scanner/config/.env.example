# 扫描器模组环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 环境设置
SCANNER_ENV=development

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PASSWORD=

# ZeroMQ配置
ZMQ_PUBLISHER_HOST=localhost
ZMQ_PUBLISHER_PORT=5555
ZMQ_SUBSCRIBER_HOST=localhost
ZMQ_SUBSCRIBER_PORT=5556
ZMQ_REQUEST_HOST=localhost
ZMQ_REQUEST_PORT=5557
ZMQ_REPLY_HOST=localhost
ZMQ_REPLY_PORT=5558

# API密钥配置
API_BINANCE_API_KEY=your_binance_api_key_here
API_BINANCE_SECRET_KEY=your_binance_secret_key_here
API_NEWS_API_KEY=your_news_api_key_here

# 扫描器配置
SCANNER_SCAN_INTERVAL=60
SCANNER_BATCH_SIZE=100
SCANNER_MAX_WORKERS=4
SCANNER_TIMEOUT=30

# 规则配置
SCANNER_RULES_THREE_HIGH_ENABLED=true
SCANNER_RULES_THREE_HIGH_VOLATILITY_THRESHOLD=0.05
SCANNER_RULES_THREE_HIGH_VOLUME_THRESHOLD=1000000
SCANNER_RULES_THREE_HIGH_CORRELATION_THRESHOLD=0.7

SCANNER_RULES_BLACK_HORSE_ENABLED=true
SCANNER_RULES_BLACK_HORSE_PRICE_CHANGE_THRESHOLD=0.15
SCANNER_RULES_BLACK_HORSE_VOLUME_SPIKE_THRESHOLD=3.0
SCANNER_RULES_BLACK_HORSE_NEWS_SENTIMENT_THRESHOLD=0.6

SCANNER_RULES_POTENTIAL_FINDER_ENABLED=true
SCANNER_RULES_POTENTIAL_FINDER_MARKET_CAP_THRESHOLD=100000000
SCANNER_RULES_POTENTIAL_FINDER_PRICE_THRESHOLD=1.0
SCANNER_RULES_POTENTIAL_FINDER_VOLUME_THRESHOLD=50000

# 日志配置
LOGGING_LEVEL=INFO
LOGGING_FILE_ENABLED=true
LOGGING_FILE_PATH=logs/scanner.log
LOGGING_CONSOLE_ENABLED=true
LOGGING_CONSOLE_COLORIZE=false