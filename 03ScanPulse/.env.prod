# 扫描器模组生产环境配置
# Docker容器化部署专用环境变量

# ===================================================================
# 核心环境设置
# ===================================================================
MODULE_ENV=production
SCANNER_ENV=production
SCANNER_DEBUG=false
PYTHONPATH=/app:/app/deps
PYTHONUNBUFFERED=1

# ===================================================================
# 服务连接配置
# ===================================================================
# TACoreService连接
TACORE_SERVICE_URL=tcp://tacore_service:5555
TACORE_SERVICE_TIMEOUT=10

# Redis连接
REDIS_URL=redis://redis:6380
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_DATABASE=0
REDIS_PASSWORD=

# ===================================================================
# ZeroMQ通信配置
# ===================================================================
ZMQ_PUBLISHER_HOST=0.0.0.0
ZMQ_PUBLISHER_PORT=5555
ZMQ_SUBSCRIBER_HOST=0.0.0.0
ZMQ_SUBSCRIBER_PORT=5556
ZMQ_REQUEST_HOST=0.0.0.0
ZMQ_REQUEST_PORT=5557
ZMQ_REPLY_HOST=0.0.0.0
ZMQ_REPLY_PORT=5558

# ===================================================================
# API配置
# ===================================================================
API_BINANCE_BASE_URL=https://api.binance.com
API_BINANCE_API_KEY=
API_BINANCE_SECRET_KEY=
API_NEWS_API_KEY=

# ===================================================================
# 扫描器业务配置
# ===================================================================
SCANNER_SCAN_INTERVAL=120
SCANNER_BATCH_SIZE=200
SCANNER_MAX_WORKERS=8
SCANNER_TIMEOUT=20

# ===================================================================
# 规则引擎配置
# ===================================================================
# 三高规则
SCANNER_RULES_THREE_HIGH_ENABLED=true
SCANNER_RULES_THREE_HIGH_VOLATILITY_THRESHOLD=0.05
SCANNER_RULES_THREE_HIGH_VOLUME_THRESHOLD=2000000
SCANNER_RULES_THREE_HIGH_CORRELATION_THRESHOLD=0.75

# 黑马检测规则
SCANNER_RULES_BLACK_HORSE_ENABLED=true
SCANNER_RULES_BLACK_HORSE_PRICE_CHANGE_THRESHOLD=0.20
SCANNER_RULES_BLACK_HORSE_VOLUME_SPIKE_THRESHOLD=4.0
SCANNER_RULES_BLACK_HORSE_NEWS_SENTIMENT_THRESHOLD=0.7

# 潜力挖掘规则
SCANNER_RULES_POTENTIAL_FINDER_ENABLED=true
SCANNER_RULES_POTENTIAL_FINDER_MARKET_CAP_THRESHOLD=200000000
SCANNER_RULES_POTENTIAL_FINDER_PRICE_THRESHOLD=2.0
SCANNER_RULES_POTENTIAL_FINDER_VOLUME_THRESHOLD=100000

# ===================================================================
# 日志配置
# ===================================================================
LOGGING_LEVEL=INFO
LOGGING_FILE_ENABLED=true
LOGGING_FILE_PATH=/app/logs/scanner_prod.log
LOGGING_CONSOLE_ENABLED=true
LOGGING_CONSOLE_COLORIZE=false

# ===================================================================
# 生产环境特定配置
# ===================================================================
PRODUCTION_MODE=true
MOCK_DATA_ENABLED=false
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ===================================================================
# Docker容器化配置
# ===================================================================
CONTAINER_NAME=scanner
CONTAINER_RESTART_POLICY=unless-stopped
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=1.0