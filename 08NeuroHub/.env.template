# 环境变量模板文件
# 复制此文件为 .env.development, .env.staging, .env.production
# 并填入实际的密钥和配置信息

# 应用环境 (development/staging/production)
APP_ENV=development

# API密钥 (严禁硬编码到代码中)
API_KEY_BINANCE=your_binance_api_key_here
API_SECRET_BINANCE=your_binance_secret_here
API_KEY_OKEX=your_okex_api_key_here
API_SECRET_OKEX=your_okex_secret_here

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# 数据库配置
DB_ENCRYPTION_KEY=your_db_encryption_key_here

# JWT密钥
JWT_SECRET=your_jwt_secret_key_here

# 日志服务
LOG_SERVER_URL=https://your-log-server.com/api/logs

# 告警配置
ALERT_WEBHOOK_URL=https://your-alert-webhook.com/notify
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# 监控配置
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_API_KEY=your_grafana_api_key_here

# 外部服务
TRADING_AGENTS_API_URL=http://localhost:8080
RISK_SERVICE_URL=http://localhost:8081

# ZeroMQ安全
ZMQ_CURVE_PUBLIC_KEY=your_zmq_public_key_here
ZMQ_CURVE_SECRET_KEY=your_zmq_secret_key_here

# 备份配置
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# 第三方服务
SENTRY_DSN=https://your-sentry-dsn.com
DATADOG_API_KEY=your_datadog_api_key