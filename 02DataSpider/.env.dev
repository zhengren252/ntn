# 开发环境配置文件
# 用于本地开发和调试

# 应用环境
APP_ENV=development
BUILD_TARGET=development
LOG_LEVEL=DEBUG

# 端口配置
API_PORT=5000
FRONTEND_PORT=3000
REDIS_PORT=6379
ZMQ_PUB_PORT=5555
ZMQ_SUB_PORT=5556

# 数据库配置
DATABASE_URL=sqlite:///data/dev.db
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0

# ZeroMQ配置
ZMQ_PUBLISHER_PORT=5555
ZMQ_SUBSCRIBER_PORT=5556
ZMQ_TOPIC_PREFIX=crawler

# Telegram配置 (开发环境使用测试值)
TELEGRAM_API_ID=your_dev_api_id
TELEGRAM_API_HASH=your_dev_api_hash
TELEGRAM_BOT_TOKEN=your_dev_bot_token
TELEGRAM_SESSION_NAME=dev_session

# Scrapy配置
SCRAPY_CONCURRENT_REQUESTS=8
SCRAPY_DOWNLOAD_DELAY=1
SCRAPY_RANDOMIZE_DOWNLOAD_DELAY=0.5
SCRAPY_USER_AGENT=Mozilla/5.0 (compatible; NTN-Crawler/1.0; +http://localhost:5000/robots.txt)

# 代理配置 (开发环境可选)
USE_PROXY=false
PROXY_LIST_URL=
PROXY_ROTATION_INTERVAL=300

# 监控配置
MONITORING_ENABLED=true
METRICS_PORT=8000
HEALTH_CHECK_INTERVAL=30

# 日志配置
LOG_FORMAT=detailed
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# 开发工具配置
DEBUG_MODE=true
HOT_RELOAD=true
AUTO_RESTART=true
DEV_MOUNT_SUFFIX=

# 数据处理配置
DATA_VALIDATION_STRICT=false
DATA_CLEANUP_INTERVAL=3600
TEMP_FILE_RETENTION=86400

# 安全配置 (开发环境宽松)
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
CORS_ORIGINS=*
CSRF_PROTECTION=false

# 性能配置
WORKER_PROCESSES=1
WORKER_THREADS=4
MAX_MEMORY_USAGE=1GB
GC_THRESHOLD=0.8