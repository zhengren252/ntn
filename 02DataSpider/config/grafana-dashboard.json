{
  "dashboard": {
    "id": null,
    "title": "信息源爬虫模组监控面板",
    "tags": ["info-crawler", "ntn", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"info-crawler\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(up, environment)",
          "refresh": 1,
          "includeAll": false,
          "multi": false
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "系统概览",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false
      },
      {
        "id": 2,
        "title": "服务状态",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 1},
        "targets": [
          {
            "expr": "up{job=\"info-crawler\", instance=~\"$instance\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "离线"}, "1": {"text": "在线"}}}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "CPU使用率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 1},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100)",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "内存使用率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 1},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "磁盘使用率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 1},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\", instance=~\"$instance\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\", instance=~\"$instance\"})) * 100",
            "legendFormat": "{{instance}} - {{mountpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "应用监控",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "collapsed": false
      },
      {
        "id": 7,
        "title": "API请求量",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "rate(flask_http_request_total{job=\"info-crawler\", instance=~\"$instance\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 8,
        "title": "API响应时间",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 10},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flask_http_request_duration_seconds_bucket{job=\"info-crawler\", instance=~\"$instance\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(flask_http_request_duration_seconds_bucket{job=\"info-crawler\", instance=~\"$instance\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 9,
        "title": "API错误率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 10},
        "targets": [
          {
            "expr": "rate(flask_http_request_exceptions_total{job=\"info-crawler\", instance=~\"$instance\"}[5m]) / rate(flask_http_request_total{job=\"info-crawler\", instance=~\"$instance\"}[5m]) * 100",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "爬虫监控",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
        "collapsed": false
      },
      {
        "id": 11,
        "title": "爬虫任务状态",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 19},
        "targets": [
          {
            "expr": "crawler_tasks_active{instance=~\"$instance\"}",
            "legendFormat": "活跃任务"
          },
          {
            "expr": "crawler_tasks_pending{instance=~\"$instance\"}",
            "legendFormat": "待处理任务"
          },
          {
            "expr": "crawler_tasks_failed{instance=~\"$instance\"}",
            "legendFormat": "失败任务"
          }
        ]
      },
      {
        "id": 12,
        "title": "数据收集量",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 19},
        "targets": [
          {
            "expr": "rate(crawler_data_collected_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "{{source}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "cps"
          }
        }
      },
      {
        "id": 13,
        "title": "爬虫成功率",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 9, "x": 15, "y": 19},
        "targets": [
          {
            "expr": "(rate(crawler_tasks_completed_total{instance=~\"$instance\"}[5m]) / rate(crawler_tasks_total{instance=~\"$instance\"}[5m])) * 100",
            "legendFormat": "成功率"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "数据服务监控",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27},
        "collapsed": false
      },
      {
        "id": 15,
        "title": "Redis状态",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "redis_up{instance=~\"$instance\"}",
            "legendFormat": "连接状态"
          },
          {
            "expr": "redis_connected_clients{instance=~\"$instance\"}",
            "legendFormat": "连接数"
          },
          {
            "expr": "redis_memory_used_bytes{instance=~\"$instance\"} / redis_memory_max_bytes{instance=~\"$instance\"} * 100",
            "legendFormat": "内存使用率"
          }
        ]
      },
      {
        "id": 16,
        "title": "ZeroMQ消息量",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 28},
        "targets": [
          {
            "expr": "rate(zmq_messages_sent_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "发送消息/秒"
          },
          {
            "expr": "rate(zmq_messages_received_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "接收消息/秒"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mps"
          }
        }
      },
      {
        "id": 17,
        "title": "数据库操作",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 9, "x": 15, "y": 28},
        "targets": [
          {
            "expr": "rate(database_operations_total{instance=~\"$instance\", operation=\"insert\"}[5m])",
            "legendFormat": "插入操作/秒"
          },
          {
            "expr": "rate(database_operations_total{instance=~\"$instance\", operation=\"select\"}[5m])",
            "legendFormat": "查询操作/秒"
          },
          {
            "expr": "rate(database_operations_total{instance=~\"$instance\", operation=\"update\"}[5m])",
            "legendFormat": "更新操作/秒"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 18,
        "title": "Telegram监控",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 36},
        "collapsed": false
      },
      {
        "id": 19,
        "title": "Telegram连接状态",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 37},
        "targets": [
          {
            "expr": "telegram_connection_status{instance=~\"$instance\"}",
            "legendFormat": "连接状态"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "断开"}, "1": {"text": "已连接"}}}
            ],
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 20,
        "title": "Telegram消息处理",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 37},
        "targets": [
          {
            "expr": "rate(telegram_messages_processed_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "处理消息/秒"
          },
          {
            "expr": "rate(telegram_messages_filtered_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "过滤消息/秒"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mps"
          }
        }
      },
      {
        "id": 21,
        "title": "消息处理延迟",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 37},
        "targets": [
          {
            "expr": "telegram_message_processing_delay_seconds{instance=~\"$instance\"}",
            "legendFormat": "处理延迟"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "red", "value": 60}
              ]
            }
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "部署事件",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(up{job=\"info-crawler\"}[5m]) > 0",
          "iconColor": "blue",
          "titleFormat": "服务重启",
          "textFormat": "{{instance}} 服务状态变更"
        }
      ]
    },
    "links": [
      {
        "title": "Prometheus",
        "url": "http://localhost:9090",
        "type": "link"
      },
      {
        "title": "应用日志",
        "url": "http://localhost:3000/explore",
        "type": "link"
      }
    ]
  }
}